@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Listagem dos usuários";
}
<div class="listaUsers" class="listagem">
    <h2>Listagem dos Usuários</h2>

    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Data de Nascimento</th>
                <th>Login</th>
                <th>Senha</th>
                <th>Tipo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Usuario u in Model)
            {
                <tr>
                    <td>@u.IdUser</td>
                    <td>@u.NomeUser</td>
                    <td>@u.DataNascimento.ToString("dd/MM/yyyy")</td>
                    <td>@u.Login</td>
                    <td>@u.Senha</td>
                    <td>@u.Tipo</td>
                </tr>
            }
        </tbody>
    </table>
</div>